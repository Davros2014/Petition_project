<div class="loginPage">
    <div class="logInContainer">
    <h3 class="mainH1">Log in</h3>
    <form id="loginForm" method="POST">
        <input id="emailReg" placeholder="email" type="email" name="email" autocomplete="off">
        <input id="passwordReg" placeholder="password" type="password" name="password" autocomplete="off">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button class="submit-button">Submit</button>
    </form>
    </div>
    {{#if error}}
    <p id="error">{{error}}</p>
    {{/if}}
</div>
